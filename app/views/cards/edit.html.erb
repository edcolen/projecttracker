<p><%= link_to "back to section", section_path(Card.find(params[:id]).section) %></p>

<h2>Update Card</h2>

<%= form_with(model: @card, local: true) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :start_date %>
  <%= f.date_select :start_date %>

  <%= f.label :end_date %>
  <%= f.date_select :end_date %>

  <%= f.label :priority %>
  <%= f.select(:priority, options_for_select(["low", "medium", "high"], Card.find(params[:id]).priority)) %>

  <%= f.label :status %>
  <%= f.select(:status, options_for_select(["new", "in progress", "done"], Card.find(params[:id]).status)) %>

  <%= f.label :category %>
  <%= f.select(:category, options_for_select(["issue", "feature"], Card.find(params[:id]).category)) %>

  <%= f.label :leader %>
  <%= collection_select(:card, :leader_id, Card.find(params[:id]).members, :id, :username) %>

  <%= f.label :color %>
  <%= collection_select(:card, :color_id, Color.all, :id, :name) %>

  <%= f.submit "Update card" %>
<% end %>
