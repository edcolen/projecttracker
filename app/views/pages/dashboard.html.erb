<h1>Dashboard</h1>

<%= link_to new_project_path do %>
  <span><i class="fas fa-plus"></i> New project</span>
<% end %>

<h3>Projects</h3>

<% @projects.reverse_each do |project| %>
  <hr>
  <h4>Project: <%= link_to project.title, project_path(project) %></h4>
  <p><%= project.description %></p>

  <% if policy(project).edit? %>
    <%= link_to edit_project_path(project) do %>
      <span><i class="fas fa-edit"></i> Edit project</span>
    <% end %>
  <% end %>

  <% if policy(project).destroy? %>
    <%= link_to project_path(project), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <span> <i class="far fa-trash-alt"></i> Delete project</span>
    <% end %>
  <% end %>

  <p><%= "Members: #{project.members.count} | Sections: #{project.sections.count} | Cards: #{project.cards.count}" %></p>
<% end%>
